<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#55BBFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:text="@string/checkin_lbl_voltar"
            android:textColor="#FFFFFF" />
    
    </RelativeLayout>
    <!-- HEADER -->

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >

	    <!-- CADASTRO NOVO LUGAR -->

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#686868"
	        android:orientation="vertical"
	        android:padding="10dp" >

	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/checkin_cadastro_local"
	            android:textColor="#CCCCCC" />

	        <EditText
	            android:id="@+id/txtNomeLocal"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ems="10" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/checkin_gasto_local" />

	        <EditText
	            android:id="@+id/txtValorGasto"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:inputType="numberDecimal" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/checkin_seleccione_categoria" />
	            
	    </LinearLayout>

	    <ScrollView
	        android:layout_width="fill_parent"
	        android:layout_height="249dp"
	        android:layout_weight="0.82"
	        android:background="#FFFFFF"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="620dp"
	            android:background="#FFFFFF"
	            android:orientation="vertical" >

	            <ListView
	                android:id="@+id/list"
	                android:layout_width="match_parent"
	                android:layout_height="617dp" >
	            </ListView>
	        </LinearLayout>
	    </ScrollView>
	    <!-- CADASTRO NOVO LUGAR -->


	    <!-- LISTA DE LUGAR -->
	    <!-- LISTA DE LUGAR -->


	    <!-- VALOR GASTO E BOTÃO CHECKIN -->
	    <!-- VALOR GASTO E BOTÃO CHECKIN -->

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="-4dp"
	        android:background="#33CC00"
	        android:orientation="vertical"
	        android:padding="10dp" >

	        <TextView
	            android:id="@+id/lbl_categoria"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Medium Text"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <Button
	            android:id="@+id/btnCadastrar"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/checkin_button_fazer" />
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>
